<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/mainbk">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/arapey"
                    android:text="Covid - 19\nCases"
                    android:textColor="#000000"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/doc" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_background4"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Global Cases"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/globalCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_background4"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="India's Cases"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/IndiaCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_background3"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Case"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/activeCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_background1"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovered"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/totalRecovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_background2"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deaths"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/totalDeath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:textColor="#16269C"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/fever"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fever"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/cough"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dry Cough"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/difficult_breathing"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Difficulty Breathing"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/tiredness"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiredness"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/chills"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chills"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:background="@drawable/round_background5">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/info"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Get the latest info from the MoHFW about COVID-19"/>
                    <TextView
                        android:id="@+id/whoLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here              \n"
                        android:textSize="24sp"
                        android:textColor="#FF0000"
                        android:layout_marginEnd="40dp"/>
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TableLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cases Graph"
                android:layout_below="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#B10BC6"/>
            <com.anychart.AnyChartView
                android:id="@+id/anyChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/round_background3"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/customized"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#6CE3F8">
                        <TextView
                            android:id="@+id/sNo"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text=" S.No. "
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:id="@+id/stateName"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="States/Union Territories"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:id="@+id/active"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=" A "
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#002963"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:id="@+id/recovered"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=" R "
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#1C7C01"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:id="@+id/deaths"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=" D "
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"/>
                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#DDD6D6">
                        <TextView
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:text="A = Active cases"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#003F97"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:text="R = Recovered cases"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#1C7C01"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:text="D = Deaths"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precautions"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:textColor="#16269C"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/hand_wash"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wash your hands frequently"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/social_distancing"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social Distancing"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/avoid_touching"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avoid touching your pretty face"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/stay_home"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stay Home\n#StaySafe"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/medical_support"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="If you've any of the above symptoms, seek medical support"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_background4">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/follow_instructions"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follow the directions of your local health authority"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="***Developed by Akshay Khanna***"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#FF0000"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>